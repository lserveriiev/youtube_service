{% extends 'front/base.html.twig' %}

{% block title %}{{ video.title }}{% endblock %}

{% block body %}
    <h1 class="my-4 text-center text-lg-left">{{ video.title }}</h1>
    <div class="row row-offcanvas row-offcanvas-right">
        <div class="col-12 col-md-9">
            <iframe
                    width="700"
                    height="400"
                    src="https://www.youtube.com/embed/{{ video.code }}?rel=0&modestbranding=1&showinfo=0"
                    frameborder="0"
                    gesture="media"
                    allow="encrypted-media"
                    allowfullscreen
            ></iframe>
        </div>
        <div class="col-6 col-md-3 sidebar-offcanvas" id="sidebar">
            <div class="row text-center text-lg-left">
                {% for video in videos %}
                    <div class="col-lg-12 col-md-4 col-xs-6">
                        <a href="{{ path('view_video', {'code': video.code}) }}" class="d-block mb-4 h-100">
                            <img class="img-fluid img-thumbnail" src="{{ video.thumbnail }}" alt="">
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}